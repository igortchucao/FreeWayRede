package IC.Interface;

import java.awt.Color;
import java.awt.Graphics;

import IC.Portas.Portas;

public class Slot {
	public Portas porta;
	public int POS_X = 0, POS_Y = 0, TM = 40;
	public boolean SHOW = false;

	public Slot(int x, int y) {
		this.POS_X = x;
		this.POS_Y = y - 20;
		this.porta = null;
	}

	public void render(Graphics g, int i) {
		if (porta == null) {
			g.setColor(Color.black);
			g.drawRect(POS_X - ((TM + 40) * i), POS_Y, TM, TM);

			g.setColor(Color.red);
			g.fillRect(POS_X - ((TM + 40) * i) + 1, POS_Y + 1, TM - 1, TM - 2);
		} else {
			porta.POS_X -= (TM * i);
			porta.FONT = 10;
			porta.render(g);
		}

		if (SHOW) {
			g.setColor(Color.white);
			g.fillRect(POS_X + 50, POS_Y - 100, 100, 100);
			
			g.setColor(Color.black);
			g.drawRect(POS_X + 50, POS_Y - 100, 100, 100);
		}
	}
}
